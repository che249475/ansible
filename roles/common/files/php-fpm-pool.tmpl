[{{ sitename }}]
user = $pool
group = $pool
listen = /var/run/php7.0-fpm-$pool.sock

listen.owner = www-data
listen.group = www-data

pm = dynamic
pm.max_children = 16
pm.start_servers = 1
pm.min_spare_servers = 1
pm.max_spare_servers = 4

slowlog = /srv/users/$pool/log/php.slow.log
request_slowlog_timeout = 5

catch_workers_output = yes
php_admin_flag[log_errors] = on
php_admin_value[error_reporting] = E_ALL & ~E_NOTICE & ~E_STRICT & ~E_DEPRECATED
php_admin_value[error_log] = "/srv/users/$pool/log/php.error.log"
php_admin_value[open_basedir] = "/srv/users/$pool/www/:/srv/users/$pool/tmp/"
php_admin_value[upload_tmp_dir] = "/srv/users/$pool/tmp/"
